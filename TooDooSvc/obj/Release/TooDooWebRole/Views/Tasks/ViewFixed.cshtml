@model TooDooWebRole.Models.TooDooEntry

@{
    ViewBag.Title = "Details";
}
<p>
    @Html.ActionLink("Back to Journal", "Status")
</p>
<h2 style="max-width:500px;word-break:break-all">@Html.DisplayFor(model => model.Title)</h2>
<p>
    Assigned to: <i>@Html.DisplayFor(model => model.Owner)</i>
</p>
<br />
<table class="table table-striped">
    <tr>
        <th style="width:180px;text-align:center;max-width:180px;word-break:break-all;">
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <td style="text-align:start;word-break:break-all;">
            @Html.DisplayFor(model => model.Notes)
        </td>
    </tr>
</table>
<table class="table table-striped">
    <tr>
        <th style="width:180px;text-align:center;max-width:180px;word-break:break-all;">
            @Html.DisplayNameFor(model => model.Report)

        </th>
        <td style="text-align:start;word-break:break-all;">
            @Html.DisplayFor(model => model.Report)
        </td>
    </tr>
</table>

@if(Model.ReportPhotoUrl != null) {
<fieldset>
	<legend>@Html.DisplayFor(model => model.Report)</legend>
    <dl>@Html.DisplayNameFor(model => model.ReportPhotoUrl)
    </dl>
	<dl>        		
        <dd>
            <img src="@Model.ReportPhotoUrl" title="@Model.Report" />
		</dd>
	</dl>
</fieldset>
}
@if(Model.ReportPhotoUrl != null) {
<fieldset>
	<legend>@Html.DisplayFor(model => model.Title)</legend>
    <dl>@Html.DisplayNameFor(model => model.PhotoUrl)
    </dl>
	<dl>        		
		<dd>
            <img src="@Model.PhotoUrl" title="@Model.Title" />
		</dd>
	</dl>
</fieldset>
}    
<p>
    @Html.ActionLink("Back to Journal", "Status")
</p>
