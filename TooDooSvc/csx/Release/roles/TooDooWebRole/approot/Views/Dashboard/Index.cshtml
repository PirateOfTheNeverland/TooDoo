@model IEnumerable<TooDooWebRole.Models.TooDooEntry>

@{
    ViewBag.Title = "Index";
}
<h2>TooDoos Assigned to You</h2>
@if (!Model.Any()) {
    <p>Just chill and relax. Nothing toodoo here.</p>
    <br />
}
else {
    <p>Here's what you have toodoo today:</p>
    <br />
    <table class="table table-striped">
    @*<table style="width:100%">*@
        <tr>
            <th class="tdGeneral">
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th class="tdNotes">
                @Html.DisplayNameFor(model => model.ShortNotes)
            </th>
            <th class="tdGeneral">
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th class="tdGeneral"></th>
        </tr>

    @foreach (var item in Model) {
        <tr>                    
            <td style="width:180px;max-width:180px;word-break:break-all;">
                @Html.ActionLink(item.Title, "Details", new { id=item.TooDooId }, null)   
            </td>
            <td style="text-align:start;max-width:500px;word-break:break-all;">
                @Html.DisplayFor(modelItem => item.ShortNotes)
            </td>
            <td style="width:180px;text-align:center;max-width:180px;word-break:break-all;">
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td style="width:110px;text-align:center;max-width:110px;word-break:break-all;">
                @Html.ActionLink("Accomplish task", "Edit", new { id=item.TooDooId }) 
            </td>
        </tr>
    }

    </table>    
}
