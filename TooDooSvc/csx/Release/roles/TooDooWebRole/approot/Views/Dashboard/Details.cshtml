@model TooDooWebRole.Models.TooDooEntry

@{
    ViewBag.Title = "Details";
}
<p>
    @Html.ActionLink("Accomplish task", "Edit", new { id=Model.TooDooId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
<h2 style="max-width:500px;word-break:break-all">@Html.DisplayFor(model => model.Title)</h2>
<p>
    Assigned to you by: <i>@Html.DisplayFor(model => model.CreatedBy)</i>
</p>
<br />
<table class="table table-striped">  
    <tr>
        <th style="width:180px;text-align:center;max-width:180px;word-break:break-all;">@Html.DisplayNameFor(model => model.Notes)</th>
        <td style="text-align:start;max-width:500px;word-break:break-all;">
            @Html.DisplayFor(model => model.Notes)
        </td>
    </tr>
    <tr>
        <th style="width:180px;text-align:center;max-width:180px;word-break:break-all;">@Html.DisplayNameFor(model => model.CreatedDate)</th>
        <td>
            @Html.DisplayFor(model => model.CreatedDate)
        </td>
    </tr>
</table>

<fieldset>
	<legend>@Html.DisplayFor(model => model.Title)</legend>
	<dl>        		
        @if(Model.PhotoUrl != null) {
		    <dd>
                <img src="@Model.PhotoUrl" title="@Model.Title" />
		    </dd>
        }
	</dl>
</fieldset>
<p>
