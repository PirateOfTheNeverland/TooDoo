<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("TOODOO!!!", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            @if (@Session["HasNewFriend"] != null)
                            {
                                if ((bool)@Session["HasNewFriend"])
                                {
                                    <li style="background-color: #09f597;">@Html.ActionLink("New friend!", "Notification", "Friends")</li>
                                }
                                else
                                {
                                    <li>@Html.ActionLink("Friends", "Index", "Friends")</li>
                                }
                            }
                            else
                            {
                                <li>@Html.ActionLink("Friends", "Index", "Friends")</li>
                            }
                            <li>@Html.ActionLink("Journal", "Status", "Tasks")</li>
                            @if (@Session["HasNewTooDoo"] != null)
                            {
                                if ((bool)@Session["HasNewTooDoo"])
                                {
                                    <li style="background-color: #09f597;">@Html.ActionLink("New quest!", "Index", "Dashboard")</li>
                                }
                                else
                                {
                                    <li>@Html.ActionLink("Active quests", "Index", "Dashboard")</li>
                                }
                            }
                            else
                            {
                                <li>@Html.ActionLink("Active quests", "Index", "Dashboard")</li>
                            }                            
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - TooDoo</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
