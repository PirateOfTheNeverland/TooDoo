@model TooDooWebRole.Models.FriendEntry

@{
    ViewBag.Title = "Edit";
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <h2 style="max-width:500px;word-break:break-all">@Html.DisplayFor(model => model.Name)</h2>
    <br />

    <fieldset class="form-horizontal">
        <legend>Update TooDoo</legend>

        @Html.HiddenFor(model => model.FriendId)
        @Html.HiddenFor(model => model.Name)

        <div class="form-group">
            @Html.LabelFor(model => model.Notes, new { @class = "control-label col-md-2" })
		<div class="controls">
                @Html.TextAreaFor(model => model.Notes, new { @style = "height:150px;width:100%;word-break:break-all"})
                @Html.ValidationMessageFor(model => model.Notes, null, new { @class = "help-inline" })
            </div>
		</div>

        <div class="form-group">
            <label class="control-label col-md-2" for="IsBlocked">Block</label>
			<div class="controls">
				@Html.EditorFor(model => model.IsBlocked)
				@Html.ValidationMessageFor(model => model.IsBlocked, null, new { @class = "help-inline" })
			</div>
		</div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

